{
  "$schema": "https://opencode.ai/config.json",
  "theme": "rosepine",
  "keybinds": {
    "command_list": "ctrl+l"
  },
  "lsp": {
    "rust_analyzer": {
      "command": ["rust-analyzer"],
      "extensions": [".rs"]
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{file:~/.secrets/context7-key}"
      },
      "enabled": true
    }
  }
}
